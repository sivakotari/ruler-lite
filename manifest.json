{
    "name": "Ruler-Lite",
    "version": "1.0",
    "description": "Page ruler",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["activeTab"],
    "browser_action": {},
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "css": ["content.css"],
          "js": ["content.js"],
          "run_at": "document_start"
        }
    ]
  }